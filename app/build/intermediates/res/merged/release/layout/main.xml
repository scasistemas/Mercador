<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >



    <Button android:text="Atender Cliente"
        android:id="@+id/btAtividadesMenuPricipal" android:layout_gravity="center"
        android:layout_width="350dp" android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"></Button>
    <Button android:text="Clientes"
        android:id="@+id/btClientesMenuPricipal" android:layout_gravity="center"
        android:layout_width="350dp" android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"></Button>
    <Button android:text="Pedidos de Venda"
        android:id="@+id/btPedidosMenuPricipal" android:layout_gravity="center"
        android:layout_width="350dp" android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"></Button>
    <Button android:text="Gerenciar Dados"
        android:id="@+id/btBackup" android:layout_gravity="center"
        android:layout_width="350dp" android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"></Button>



    <!--<Button android:text="Restaurar Backup"
        android:id="@+id/btBackupRestaura" android:layout_gravity="center"
        android:layout_width="350dp" android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"></Button>   -->
    <Button android:layout_below="@id/btClientesMenuPricipal" android:text="Sair"
        android:id="@+id/btSairMenuPricipal" android:layout_gravity="center"
        android:layout_width="350dp" android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"></Button>


    <LinearLayout android:layout_width="fill_parent"
        android:layout_marginTop="0sp"
        android:paddingTop="0sp"
        android:background="#AAA"
        android:layout_alignParentBottom="true" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        >


        <ImageButton
            android:id="@+id/btSincMenuPricipal"
            android:src="@drawable/ic_action_refresh"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"

            />
        <ImageButton
            android:id="@+id/btExtraMenuPricipal"
            android:src="@drawable/ic_action_settings"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"

            />

        <ImageButton
            android:id="@+id/btRel"
            android:src="@drawable/ic_action_paste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/btajustes"
            android:src="@drawable/ic_action_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout android:layout_width="fill_parent"
        android:layout_marginTop="0sp"
        android:paddingTop="0sp"
        android:background="#AAA"
        android:layout_alignParentBottom="true" android:gravity="center_vertical"
        android:layout_height="wrap_content"
        >
        <TextView android:layout_width="100sp" android:layout_height="20sp"
            android:textColor="#00F"
            android:text="vs: 1.02.70"
            android:layout_gravity="right" />
        <TextView android:layout_width="fill_parent" android:layout_height="20sp"
            android:id="@+id/vendedor"
            android:textColor="#00F"
            android:gravity="right"
            android:text="" android:layout_gravity="right" />

    </LinearLayout>


</LinearLayout>

