                <TextView    android:text="DescLarg"
                    android:id="@+id/txtdesclarg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"/>
                <TextView    android:text="Espessura: :"
                    android:id="@+id/txtesp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txtlarg"
                    android:paddingTop="3dp"/>
                <TextView
                    android:id="@+id/txtdescesp"
                    android:text="DescLarg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtdesclarg"

                    android:paddingTop="3dp"/>
                <TextView    android:text="Unidade: :"
                    android:id="@+id/txtun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txtesp"
                    android:paddingTop="3dp"/>
                <TextView
                    android:id="@+id/txtdescun"
                    android:text="DescUni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtesp"

                    android:paddingTop="3dp"/>

