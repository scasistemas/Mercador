                    />]

            </RelativeLayout>
                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/lititle2"
                    android:layout_below="@id/txvinfo2"
                    >
                    <TextView
                        android:id="@+id/txttile2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Valores"
                        android:textSize="16dp"
                        android:gravity="center_horizontal"
                        android:textColor="#ff2d2d2d"
                        />


                </LinearLayout>

            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txvinfo3"   android:layout_below="@+id/lititle2"
                android:shrinkColumns="3"  android:stretchColumns="3" android:background="#fffafaff">

                <!-- Row 2 with 3 columns -->

                <TableRow
                    android:id="@+id/op2"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    >

                    <Button
                        android:id="@+id/btprox" android:text=">"
                        android:layout_weight="1.0"  android:layout_height="fill_parent"
                        android:gravity="center" android:onClick="bkpserv"
                        android:layout_marginLeft="0dp"
                        android:padding="0dp"/>
                    <Button
                        android:id="@+id/btbkserv" android:text="Localizar"
                          android:layout_height="fill_parent" android:layout_weight="1.0"
                        android:gravity="center" android:onClick="bkpserv"
                        android:layout_marginLeft="0dp"
                        android:padding="0dp"/>

                </TableRow>
            </TableLayout>
    </RelativeLayout>


